{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Tremor",
  "description": "The Data Terminal for Prediction Markets - Query millions of markets with SQL and historical snapshots every 5 minutes",
  "colors": {
    "primary": "#3b82f6",
    "light": "#60a5fa",
    "dark": "#1d4ed8"
  },
  "background": {
    "color": {
      "light": "#ffffff",
      "dark": "#000000"
    }
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "icon": "book",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "features",
              "development"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "icon": "terminal",
        "groups": [
          {
            "group": "Overview",
            "pages": [
              "api-reference/introduction"
            ]
          },
          {
            "group": "Endpoints",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://tremor.sh",
          "icon": "chart-line"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/nikshepsvn/tremor",
          "icon": "github",
          "iconType": "brands"
        }
      ]
    }
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:team@tremor.sh",
        "icon": "life-ring"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Try Tremor",
      "href": "https://tremor.sh"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "github": "https://github.com/nikshepsvn/tremor",
      "x": "https://x.com/tremorsh"
    }
  },
  "seo": {
    "indexing": "navigable",
    "metatags": {
      "og:title": "Tremor - The Data Terminal for Prediction Markets",
      "og:description": "Query millions of markets with SQL and historical snapshots every 5 minutes",
      "og:site_name": "Tremor"
    }
  },
  "search": {
    "prompt": "Search Tremor docs..."
  },
  "styling": {
    "eyebrows": "breadcrumbs",
    "codeblocks": "dark"
  },
  "appearance": {
    "default": "dark",
    "strict": false
  }
}
